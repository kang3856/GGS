<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="categories">
	<select id="selectAll"
			resultType="Category">
			SELECT no, name, image
			FROM categories
	</select>
	
	<select id="selectImg"
			resultType="String"
			parameterType="String">
			SELECT image
			FROM categories
			WHERE name = #{name}
	</select>	
</mapper>  




